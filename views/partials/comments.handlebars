<div class="comments padding-right">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      <span class="grey">{{user.first_name}} {{user.last_name}}</span> on <span class="grey">{{format_date created_at}}</span>
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>